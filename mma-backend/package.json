{
  "name": "ufc-backend",
  "version": "1.0.0",
  "description": "UFC Fighter Management Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "prisma migrate dev",
    "seed": "prisma db seed",
    "generate": "prisma generate",
    "studio": "prisma studio",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "// === DATA COLLECTION ===": "",
    "auto-enhance": "ts-node scripts/autoEnhance.ts",
    "auto-enhance-small": "ts-node scripts/autoEnhance.ts 10",
    "auto-enhance-medium": "ts-node scripts/autoEnhance.ts 50",
    "auto-enhance-large": "ts-node scripts/autoEnhance.ts 100",
    "mass-enhance": "ts-node scripts/massEnhance.ts",
    "mass-enhance-small": "ts-node scripts/massEnhance.ts small",
    "mass-enhance-medium": "ts-node scripts/massEnhance.ts medium",
    "mass-enhance-large": "ts-node scripts/massEnhance.ts large",
    "mass-enhance-full": "ts-node scripts/massEnhance.ts full",
    "// === DATABASE === ": "",
    "seed-enhanced": "ts-node scripts/seedEnhanced.ts",
    "db-reset": "prisma migrate reset --force",
    "db-fresh": "npm run db-reset && npm run auto-enhance-medium && npm run seed-enhanced",
    "db-full": "npm run db-reset && npm run mass-enhance-large && npm run seed-enhanced",
    "// === COMPLETE WORKFLOWS ===": "",
    "quick-setup": "npm run auto-enhance-small && npm run seed-enhanced",
    "medium-setup": "npm run auto-enhance-medium && npm run seed-enhanced",
    "full-setup": "npm run mass-enhance-large && npm run seed-enhanced",
    "// === ANALYSIS ===": "",
    "analyze-data": "ts-node scripts/analyzeData.ts",
    "check-data": "ts-node scripts/checkDataQuality.ts"
  },
  "keywords": [
    "ufc",
    "fighters",
    "api",
    "express",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.10.0",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "morgan": "^1.10.0",
    "node-html-parser": "^7.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^5.26.0",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}